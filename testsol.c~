#include<stdio.h>
 
int match_str(char*, char*);
 
int main(void)
{
   //char a[100], b[100];
   int position;
 
   printf("Enter some text\n");
   //gets(a);
   char*a = "4rewsfhjnpoiuytr";
 
   printf("Enter a string to find\n");
   //gets(b);
   char*b = "poiu";
   position = match_str(a, b);
 
   if(position!=-1)
      printf("Found at location %d\n", position+1);
   else
      printf("Not found.\n");
 
   return 0;   
}
 
int match_str(char *a, char *b)
{
   int position = 0;
   char *x, *y;
 
   x = a;
   y = b;
   if(!*a && !*b ) return position;
 
   while(*a)
   {
      while(*x==*y)
      {
         x++;
         y++;
         if(*x=='\0'||*y=='\0')
            break;         
      }   
      if(*y=='\0')
         break;
 
      a++;
      position++;
      x = a;
      y = b;
   }

   if(*a)
      return position;
   else   
      return -1;   
}

